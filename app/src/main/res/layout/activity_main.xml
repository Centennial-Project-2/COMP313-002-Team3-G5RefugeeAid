<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:gravity="center"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_margin="10dp"
        android:background="@drawable/btn_background"
        android:textSize="24dp"

        android:text="G5 Logo Place holder" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:text="G5 Members Login!" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Enter"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/btn_background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btnbackground"
            android:text="Sign Up as Refugee"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/btn_sign_up_refugee"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Sign Up as Sponsor "
            android:id="@+id/btn_sign_up_sponsor"
            android:textColor="@color/colorAccent"
            android:textAppearance="?android:textAppearanceMedium"
            android:background="@drawable/btn_background"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="298dp"
            android:layout_height="269dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/place_holder_s" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Sign Up as Sponsor "
                android:id="@+id/about_us"
                android:textColor="@color/blood_red"
                android:textAppearance="?android:textAppearanceSmall"
                android:background="@color/blood_red"
                />

            <Button
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:text="Sign Up as Sponsor "
                android:id="@+id/contact_us"
                android:textColor="@color/blood_red"
                android:textAppearance="?android:textAppearanceSmall"
                android:background="@color/blood_red"

                />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>